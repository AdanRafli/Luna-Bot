def load_xp():
    if os.path.exists(XP_FILE):
        with open(XP_FILE, "r") as f:
            try:
                return json.load(f)
            except json.JSONDecodeError:
                return {}  # Jika file kosong atau rusak, return dict kosong
def save_xp(data):
    with open(XP_FILE, "w") as f:
        json.dump(data, f, indent=4)
    return {}
